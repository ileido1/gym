<div class="container">
<div class="login Absolute-Center ">
<h1 class="form-signin-heading text-center">Iniciar sesiÃ³n</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "control-label" %><br />
    <%= f.email_field :email, autofocus: true,class: "form-control botoon" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",class: "form-control botoon" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "control-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control botoon" %>
  </div>

  <div class="actions">
    <%= f.submit "Ingresar",class: "btn btn-lg btn-success btn-block botoon" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
