<div class="container">
<div class="row login">
  <h1 class="form-signin-heading text-center">Iniciar sesi√≥n</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "control-label" %><br />
      <%= f.email_field :email, autofocus: true,class: "form-control botoon" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off",class: "form-control botoon" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Ingresar",class: "btn btn-lg btn-success btn-block botoon"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
      </div>
  </div>
